<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
<div class="row">
<div class="col-md-3">
<%= render 'info', user: @user, book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
<thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
<tbody>
     <% @books.each do |book| %>
    <tr>
<td>
  <%#= image_tag book.get_image %>
  <%= link_to user_path(book.user) do %>
  <p><%= image_tag 'no_image.jpg' %></p>
 <% end %>
 </td>
 <td>
  <p> <%= link_to book.title,book_path(book.id) %> </p>
  </td>
  <td>
  <p><%= book.body %></p>
  </td>
</div>
        </tr>
        <% end %>
      </tbody>
</table>
</div>
</div>
</div