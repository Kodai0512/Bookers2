<% if @books.errors.any? %>
  <%= @books.errors.count %>件のエラーが発生しました
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
 <div class="row">
  <div class="col-md-3">
  <%= render 'users/info', user: @user, book: @books %>
   </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
<table class="table">
 <tbody>
    <tr>
      <td>

  <%= link_to user_path(@user.id) do %>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <br>
  <%= @user.name %>
  <% end %>


  </td>
          <td>
              <%= link_to @book.title,book_path(@book.id) %>
          </td>
          <td>
             <%= link_to @book.body,book_path(@book.id) %>  
          </td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Edit",edit_book_path(@book.id) ,class:"btn btn-sm btn-success"%>
              <%= link_to "Destroy",book_path(@book.id), method: :delete ,class:"btn btn-sm btn-danger"%>
              <% end %>
             </td>
            
        </tr>
      </tbody>
</table>
</div>
</div>
</div>